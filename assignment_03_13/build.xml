<project name="assignment_03_13" default="compile" basedir=".">
	<description>
		RFID Phidget implementation using Sens-astion middleware
	</description>

	<property name="src" value="./src"/>
	<property name="build" value="./build"/>
	<property name="dist" location="./dist"/>
	<property name="lib" location="./lib"/>
	<property name="doc" location="./doc"/>
	<property name="jar" location="./jar"/>
    <path id="classpath">
      <fileset dir="${lib}" includes="**/*.jar"/>
    </path>
    <target name="prepare">
		<tstamp/>
		<mkdir dir="${build}"/>
	</target>

	<target name="compile" depends="prepare">
		<javac includeantruntime="false" srcdir="${src}" destdir="${build}" classpathref="classpath">
		</javac>
	</target>

	<target name="run" depends="compile">
		<parallel>
			<java jar="sens-ation_1.73.jar" fork="true">  
			</java>
			<sequential>
				<sleep seconds="3"/>
				<java classname="de.cmlab.ubicomp.RFIDSensor">
					<classpath>
					  <path location="${build}"/>
					  <path refid="classpath"/>
					</classpath>
				</java>
			</sequential>
			<sequential>
				<sleep seconds="6"/>
				<java classname="de.cmlab.ubicomp.RFIDClient">
					<classpath>
					  <path location="${build}"/>
					  <path refid="classpath"/>
					</classpath>
				</java>
			</sequential>
		</parallel>
	</target>

	<target name="dist" depends="compile">
		<jar destfile="${dist}/${ant.project.name}.jar" basedir="${build}">
			<manifest>
				<attribute name="Built-By" value="${user.name}" />
				<attribute name="Main-Class" value="de.cmlab.ubicomp.RFID" />
				<attribute name="Class-Path" value=". ../lib/phidget21.jar" />
			</manifest>
		</jar>
	</target>
	
	
	<target name="clean" description="clean up">
		<delete dir="${build}"/>
		<delete dir="${dist}"/>
	</target>

	<target name="javadoc">
		<javadoc
			destdir="${doc}"
			access="public"
			source="1.7"
			use="true"
			notree="false"
			nonavbar="false"
			noindex="false"
			splitindex="true"
			author="true"
			version="true"
			packagenames="de.cmlab.ubicomp"
			sourcepath="src">
			<link href="http://docs.oracle.com/javase/7/docs/api/"/>
			<classpath>
				<path location="${build}"/>
				<path refid="classpath"/>
			</classpath>
		</javadoc>
	</target>

	<target name="all" depends="clean,prepare,compile,run"/>

</project>
